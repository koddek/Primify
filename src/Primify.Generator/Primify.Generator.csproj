<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <PackageId>Primify.Generator</PackageId>
        <Description>Source generator for Primify.</Description>
        <PackageTags>json;source-generator;value-types;dotnet;litedb-bson</PackageTags>
        <IsRoslynComponent>true</IsRoslynComponent>

        <!-- ADD THIS LINE to fix analyzer warnings like RS1036 -->
        <EnforceExtendedAnalyzerRules>true</EnforceExtendedAnalyzerRules>
        <RootNamespace>Primify.Generator</RootNamespace>
        <OutputType>Library</OutputType>

        <!-- This project should not be packed as a separate NuGet package -->
        <IsPackable>false</IsPackable>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="Microsoft.CodeAnalysis.Analyzers" Version="4.14.0" PrivateAssets="all"/>
        <PackageReference Include="Microsoft.CodeAnalysis.CSharp" Version="4.14.0" PrivateAssets="all"/>
    </ItemGroup>

    <ItemGroup>
        <!-- The generator needs the attributes to identify what to generate -->
        <ProjectReference Include="..\Primify.Attributes\Primify.Attributes.csproj" PrivateAssets="all"/>
    </ItemGroup>
</Project>
