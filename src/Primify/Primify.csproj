<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <PackageId>Primify</PackageId>
        <Version>1.0.5</Version>
        <Description>A library providing custom value types with JSON serialization through source generation.</Description>
        <PackageTags>json;source-generator;value-types;dotnet;litedb-bson</PackageTags>
    </PropertyGroup>

    <ItemGroup>
        <ProjectReference Include="..\Primify.Attributes\Primify.Attributes.csproj" />
    </ItemGroup>

    <ItemGroup>
        <!-- Include the Attributes in the lib folder -->
        <None Include="..\Primify.Attributes\bin\$(Configuration)\$(TargetFramework)\Primify.Attributes.dll" Pack="true" PackagePath="lib\$(TargetFramework)" Visible="false" />

        <!-- Include the Generator in the analyzers folder -->
        <None Include="..\Primify.Generator\bin\$(Configuration)\$(TargetFramework)\Primify.Generator.dll" Pack="true" PackagePath="analyzers/dotnet/cs" Visible="false" />

        <!-- Ensure the Generator's dependencies are included if needed -->
        <!-- Add other Generator dependencies here if required -->
    </ItemGroup>
</Project>
