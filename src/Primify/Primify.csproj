<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <PackageId>Primify</PackageId>
        <Version>1.3.0</Version>
        <Description>Primify is a source generator that creates strongly-typed wrappers around primitive types, enhancing type safety and code clarity.</Description>
        <PackageTags>json;source-generator;value-types;dotnet;litedb-bson;primitive-types</PackageTags>

        <!-- This project is the one that will be packed -->
        <IsPackable>true</IsPackable>

        <!-- This ensures that this project itself doesn't produce a DLL, as it's just a container for other projects -->
        <IncludeBuildOutput>false</IncludeBuildOutput>
    </PropertyGroup>

    <ItemGroup>
        <!-- This includes the generator as an analyzer so it runs during compile time -->
        <ProjectReference Include="..\Primify.Generator\Primify.Generator.csproj" PrivateAssets="all" OutputItemType="Analyzer"/>

        <!-- These are the libraries that the end-user will need to reference -->
        <ProjectReference Include="..\Primify.Attributes\Primify.Attributes.csproj"/>
        <ProjectReference Include="..\Primify.Converters\Primify.Converters.csproj"/>
    </ItemGroup>

</Project>
