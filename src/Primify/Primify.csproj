<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <PackageId>Primify</PackageId>
        <Version>1.3.9</Version>
        <Description>Primify is a source generator that creates strongly-typed wrappers around primitive types, enhancing type safety and code clarity.</Description>
        <PackageTags>json;source-generator;value-types;dotnet;litedb-bson;primitive-types</PackageTags>
        <IsPackable>true</IsPackable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
        <IncludeSymbols>true</IncludeSymbols>
        <SymbolPackageFormat>snupkg</SymbolPackageFormat>
        <IncludeBuildOutput>true</IncludeBuildOutput> <!-- Keep this true to include referenced libraries -->
    </PropertyGroup>

    <PropertyGroup>
        <EmitCompilerGeneratedFiles>true</EmitCompilerGeneratedFiles>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="LiteDB" Version="5.0.21" />
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
        <PackageReference Include="Newtonsoft.Json.Bson" Version="1.0.3" />
        <PackageReference Include="System.Text.Json" Version="9.0.6" />
    </ItemGroup>

    <!-- Add project references -->
    <ItemGroup>
        <!-- The attributes and converters are libraries for the consuming project. -->
        <ProjectReference Include="..\Primify.Attributes\Primify.Attributes.csproj" />
        <ProjectReference Include="..\Primify.Converters\Primify.Converters.csproj" />

        <!-- The generator is included as an analyzer and its output is not directly referenced. -->
        <ProjectReference Include="..\Primify.Generator\Primify.Generator.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
    </ItemGroup>

</Project>
