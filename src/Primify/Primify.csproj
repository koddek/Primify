<Project Sdk="Microsoft.NET.Sdk">

    <PropertyGroup>
        <TargetFramework>net9.0</TargetFramework>
        <PackageId>Primify</PackageId>
        <Version>1.4.1</Version>
        <Description>Primify is a source generator that creates strongly-typed wrappers around primitive types, enhancing type safety and code clarity.</Description>
        <PackageTags>json;source-generator;value-types;dotnet;litedb-bson;primitive-types</PackageTags>
        <IsPackable>true</IsPackable>
        <GeneratePackageOnBuild>true</GeneratePackageOnBuild>
    </PropertyGroup>

    <ItemGroup>
        <PackageReference Include="LiteDB" Version="5.0.21" />
        <PackageReference Include="Newtonsoft.Json" Version="13.0.3" />
        <PackageReference Include="Newtonsoft.Json.Bson" Version="1.0.3" />
    </ItemGroup>

    <ItemGroup>
        <!-- Reference the generator project for local development -->
        <ProjectReference Include="..\Primify.Generators\Primify.Generators.csproj" OutputItemType="Analyzer" ReferenceOutputAssembly="false" />
        <!-- Include the generator in the package -->
        <None Include="..\Primify.Generators\bin\$(Configuration)\netstandard2.0\Primify.Generators.dll" Pack="true" PackagePath="analyzers\dotnet\cs\Primify.Generators.dll" Visible="false" />
    </ItemGroup>

</Project>
